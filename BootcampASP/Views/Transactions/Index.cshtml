
@{
    ViewBag.Title = "Index";
}
<h2>Master details entry form</h2>
<div class="container">
    <div class="master">
        <h2>Transaction</h2>
        <table class="table table-responsive">
            <tr>
                @*<td>Transaction No</td>
                <td>
                    <input type="text" id="transactionNo" class="form-control" />
                    <span class="error">Transaction no required</span>
                </td>*@
                <td>Transaction Date</td>
                <td>
                    <input type="date" id="transactionDate" class="form-control" />
                    <span class="error">Valid transaction date required (ex: MM-dd-yyyy)</span>
                </td>
            </tr>
            @*<tr>
                <td>Description</td>
                <td colspan="3">
                    <textarea id="description" class="form-control"></textarea>
                </td>
            </tr>*@
        </table>
    </div>
    <div class="details">
        <h2>
            Transaction items
        </h2>
        <table class="table table-responsive">
            <tr>
                <td>Supplier</td>
                <td>Item</td>
                <td>Quantity</td>
                @*<td>Rate</td>*@
                <td>&nbsp;</td>
            </tr>
            <tr class="mycontainer" id="mainrow">
                <td>
                    <select id="itemSupplier" class="pc form-control" onchange="LoadItem(this)">
                        <option>Select</option>
                    </select>
                    <span class="error">Select Supplier</span>
                </td>
                <td>
                    <select id="item" class="item form-control">
                        <option>Select</option>
                    </select>
                    <span class="error">Select item</span>
                </td>
                <td>
                    <input type="text" id="quantity" class="quantity form-control" />
                    <span class="error">Valid quantity required</span>
                </td>
                @*<td>
                    <input type="text" id="rate" class="rate form-control" />
                    <span class="error">Valid rate required</span>
                </td>*@
                <td>
                    <input type="button" id="add" value="add" style="width:80px" class="btn btn-success" />
                </td>
            </tr>
        </table>
        <div id="transactionItems">
            <table class="table table-responsive" id="transactiondetailsItems"></table>
            <span id="transactionItemError" style="color:red"></span>
        </div>
        <div style="padding:10px 0; text-align:right">
            <input id="submit" type="button" value="Save Transaction" class="btn btn-warning" style="padding:10px 20px" />
        </div>
    </div>
</div>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" />
<script src="~/Scripts/jquery-2.2.4.min.js"></script>
<script src="~/Scripts/TransactionMaster/TransactionScripts.js"></script>
<script type="text/javascript">
    $(function () {
        $('#transactionDate').datepicker({
            dateFormat: 'mm-dd-yy'
        })
    })
</script>
<style>
    span.error {
        display: block;
        visibility: hidden;
        color: red;
        font-size: 90%;
    }

    tr.error {
        background-color: rgba(255,0,0,0.35);
    }
</style>

